  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, class:'form-control' %>
  </div>

