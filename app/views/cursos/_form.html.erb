    <%= form.label :carga_horaria %>
    <%= form.number_field :carga_horaria,class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :vagas %>
    <%= form.number_field :vagas, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :pre_requisitos %>
    <%= form.text_field :pre_requisitos, class:'form-control' %>
  </div>

  <div class="actions text-center">
